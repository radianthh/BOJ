{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (g++-15, C++17)",
      "type": "shell",
      "command": "g++-15",
      "args": [
        "-std=gnu++17",
        "-O2",
        "-Wall",
        "-Wextra",
        "-Wshadow",
        "-Wconversion",
        "-Wno-sign-conversion",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Run (stdin)",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "dependsOn": "Build (g++-15, C++17)",
      "group": { "kind": "test", "isDefault": true },
      "problemMatcher": []
    }
  ]
}
